---
import BlogPost from "../components/BlogPost.astro";
import { siteConfig } from "../config/site-config";
import MainLayout from "../layout/MainLayout.astro";
---

<MainLayout title="home">
  <!-- component -->
  <section class="bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
      <h1
        class="text-3xl font-semibold capitalize lg:text-4xl text-white"
      >
        {siteConfig.title}
      </h1>

      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        <BlogPost
          title="How to use sticky note for problem solving"
          imageSrc="https://images.unsplash.com/photo-1515378960530-7c0da6231fb1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80"
          date="On: 20 October 201"
        />

        <BlogPost
          title="Morning routine to boost your mood"
          imageSrc="https://images.unsplash.com/photo-1544654803-b69140b285a1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80"
          date="On: 20 October 201"
        />
      </div>
    </div>
  </section>
</MainLayout>
